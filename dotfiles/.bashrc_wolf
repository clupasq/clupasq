# run this file by adding the following line to your .bashrc:
# source $HOME/.bashrc_clupasq

export PATH="$PATH:$HOME/.bin_wolf" # Add bin directory to PATH
export PATH="$PATH:$HOME/.bin_work" # Add bin directory to PATH

# Setting this prevents nvim from behaving weirdly in SSH when open in
# a Konsole instance: https://github.com/neovim/neovim/issues/6403#issuecomment-348710981
export KONSOLE_PROFILE_NAME=ktest

# Customization for bash-it powerline-multiline theme
# "node" may be added here to show node version
export POWERLINE_LEFT_PROMPT="hostname wd scm"
export POWERLINE_RIGHT_PROMPT="duration python_venv in_vim clock battery user_info"
# Force to choose a color other than 0
[[ $HOST_THEME_PROMPT_COLOR -eq 0 ]] && export HOST_THEME_PROMPT_COLOR=213
